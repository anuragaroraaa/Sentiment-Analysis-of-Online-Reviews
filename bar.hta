<html>
  <head>
   <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
   <script type="text/javascript">
      google.charts.load('current', {'packages':['gauge']});
      google.charts.setOnLoadCallback(drawChart);
MyObject=new ActiveXObject("WScript.shell");

      function drawChart() {
var fso, fileHandle, contents, contents1,yourfilename;
   fso = new ActiveXObject("Scripting.FileSystemObject");   
   fileHandle = fso.OpenTextFile("E:\\dist\\poscount.txt", 1); 
	fileHandle1 = fso.OpenTextFile("E:\\dist\\negcount.txt", 1);
fileHandle2 = fso.OpenTextFile("E:\\dist\\neutralcount.txt", 1);
   contents = fileHandle.ReadAll();                         
contents1 = fileHandle1.ReadAll();
contents2 = fileHandle2.ReadAll();
        var data = google.visualization.arrayToDataTable([
          ['Label', 'Value'],
          ['Positive', parseInt(contents)],
          ['Negative', parseInt(contents1)],
